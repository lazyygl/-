<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
      size="default"
    ></button>
    <view class="userinfo-nickname-wrapper">
      <button class="userinfo-nickname" bindtap="onGetOpenid">我的账号</button>
    </view>
  </view>

 
<text class="responce">对本应用的反馈与意见</text>
<input auto-focus placeholder-class="input" placeholder="将会获取焦点" placeholder="感谢您的反馈,我们会尽快处理" class="input1" bindinput="input" value="{{value}}"></input>

<button class="tijiao" type="text" placeholder-style="color:#000000" plain="{{plain}}" style=" background-color: yellow;" bindtap="popSuccess">提交</button>




  </view>
<image class="pic1" src="../../images/luntan2.png"></image>
<image class="pic2" src="../../images/mine2.png"></image>
<button placeholder-style="color:#F76260" plain="{{plain}}" class="button1" style=" background-color: yellow;" bindtap="stu2">举报</button>
<button placeholder-style="color:#F76260" plain="{{plain}}" class="button2" style=" background-color: yellow;" bindtap="stu3">我的</button>